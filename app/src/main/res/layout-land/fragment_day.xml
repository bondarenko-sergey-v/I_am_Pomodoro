<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seconds"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_alignTop="@+id/minutes"
            android:layout_toRightOf="@+id/minutes"
            android:layout_toEndOf="@+id/minutes"
            android:paddingTop="16dp"
            android:fontFamily="monospace"
            android:textColor="@color/colorTabIndicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minutes"
            android:textSize="100dp"
            android:gravity="center"
            android:fontFamily="monospace"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            android:textColor="@color/colorTabIndicator" />

        <Button
            android:text="@string/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/startBtn"
            android:background="@android:color/white"
            android:textSize="22sp"
            android:fontFamily="monospace"
            android:layout_alignTop="@+id/seconds"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/seconds"
            android:layout_toEndOf="@+id/seconds"
            android:paddingTop="26dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorTabIndicator"
            android:textColorHighlight="@color/colorButtonText" />

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="22sp"
            android:fontFamily="monospace"
            android:layout_below="@+id/seconds"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/seconds"
            android:layout_toEndOf="@+id/seconds"
            android:paddingBottom="26dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorTabIndicator"
            android:textColorHighlight="@color/colorButtonText"
            android:text="@string/reset"
            android:visibility="invisible"
            android:enabled="false"/>

    </RelativeLayout>

</layout>